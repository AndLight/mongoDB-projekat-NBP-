<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Profile for {{mail}}</h1> 
        {{!-- <button type="submit" href="/delete/{{mail}}" class="btn btn-danger">Delete profile</button> --}}
        <a href="/deleteUser/{{mail}}" type="button" class="btn btn-danger">Delete profile</a>
        <a href="/changePasRed/{{mail}}" type="button" class="btn btn-secondary">Change password</a>
        <hr>


        {{#each orders}}
        <div class="container">
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{#each this.items }}
                            <div class="row align-items-start">
                                <li class="list-group-item col">
                                    <span class="badge">Price: {{ this.price }}</span>
                                </li>
                                <li class="list-group-item col">
                                    <span class="badge">Title: {{ this.item.title }}</span>
                                </li>
                                <li class="list-group-item col">
                                    <span class="badge">Amount: {{ this.num }}</span>
                                </li>
                            </div>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Total Price: ${{ this.cart.totalPrice }}</strong>
                </div>
            </div>
        </div>
        <br>
        {{/each}}
        

    </div>
</div>