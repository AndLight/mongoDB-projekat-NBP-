{{# if products }}
<div class="container">
    <div class="row align-items-start">
        <div class="">
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item">
                        <div class="row align-items-start">
                            <div class="col">
                                <strong>Title: {{ this.item.title }}</strong>
                            </div>

                            <div class="col">
                                <span class=" badge bg-success">{{ this.price }}$</span>
                            </div>

                            <div class="col">
                                <span class=" badge bg-secondary">Amount: {{this.num}}</span>
                            </div> 

                            <div class="col">
                                <div class="btn-group">
                                    <ul class="nav-item dropdown">

                                        <a class="nav-link dropdown-toggle btn btn-secondary" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-users-cog"></i>     Action</a>
                                        
                                        <div class="dropdown-menu dropdown-menu-end">
                                            
                                            <a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="/remove/{{this.item._id}}">Remove</a>
                                            
                                        </div>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

    <hr>
    <div class="row">
        <div class="col">
            <strong>Total: {{ totalPrice }}</strong>
        </div>
    </div>

    <hr>
    <div class="row">
        <div class="col">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}